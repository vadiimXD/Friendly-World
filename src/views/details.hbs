<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/styles.css" />
    <title>Details Page</title>
</head>

<body>
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}
    <div id="wrapper">
        <header>
            <!-- Navigation -->
            <nav>
                <div>
                    <a href="/">Home</a>
                    <a href="/dashboard">Dashboard</a>
                    <a href="/search">Search</a>
                </div>
                {{#if isAuthenticated}}
                <div class="user">
                    <a href="/create">Add Animal</a>
                    <a href="/logout">Logout</a>
                </div>
                {{else}}
                <div class="guest">
                    <a href="/login">Login</a>
                    <a href="/register">Register</a>
                </div>
                {{/if}}
            </nav>
        </header>

        <main class="details">
            <!-- Details page -->
            <section id="details">
                <div id="details-wrapper">
                    <p id="details-title">Name: {{animal.name}}</p>
                    <div id="img-wrapper">
                        <img src="{{animal.image}}" />
                    </div>
                    <div id="info-wrapper">
                        <table>
                            <tr>
                                <td>
                                    <p>
                                        Years: <span id="details-years">{{animal.years}}</span>
                                    </p>
                                </td>
                                <td>
                                    <p>Kind: <span id="details-kind">{{animal.kind}}</span></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>Need of: <span id="details-need">{{animal.need}}</span></p>
                                </td>
                                <td>
                                    <p>Location: <span id="details-location">{{animal.location}}</span></p>
                                </td>
                            </tr>
                        </table>
                        <p>Description: <span id="details-description">{{animal.description}}</span></p>
                    </div>

                    {{#if isAuthenticated}}
                    <div id="action-buttons">
                        {{#if hasOwner}}
                        <a href="/edit/{{animal._id}}" id="edit-btn">Edit</a>
                        <a href="/delete/{{animal._id}}" id="delete-btn">Delete</a>
                        {{else}}
                        {{#if isDonated}}
                        <p id="already-donated">You already donated!</p>
                        {{else}}
                        <a href="/donate/{{animal._id}}" id="donation-btn">Donation</a>
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/if}}
                </div>
            </section>
        </main>

        <footer>
            <p>@Friendly World</p>
        </footer>
    </div>
</body>

</html>